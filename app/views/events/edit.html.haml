.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", events_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_event_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_event_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Entry
    .inner
      = form_for @event, :url => event_path(@event), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
