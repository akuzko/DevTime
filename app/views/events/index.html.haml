.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", events_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_event_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Entries
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.event.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("activerecord.attributes.event.description", :default => t("activerecord.labels.description", :default => "Description"))
          %th.last &nbsp;
        - @events.each do |event|
          %tr{:class => cycle("odd", "even")}
            %td= event.id
            %td= link_to event.name, event_path(event)
            %td= event.description
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", event_path(event)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_event_path(event)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", event_path(event), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
