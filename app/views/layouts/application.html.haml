!!!
%html
  %head
    %title DevTime
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    %script WEB_SOCKET_SWF_LOCATION = '/WebSocketMainInsecure.swf';
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} DevTime
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", default: "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", default: "Settings")
            %li
              %a.logout{:href => "/logout"}= t("web-app-theme.logout", default: "Logout")
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} DevTime.
        #sidebar
          = yield :sidebar
